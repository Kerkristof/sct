{% extends 'base.html.twig' %}
{% block body %}
<div class="restricted_container galery_container">
  <!-- The grid: four columns -->
  <div class="row">
    {% for picture in pictures %}
      <div class="column">
        <img src="{{asset('galery_pictures/' ~ picture.imageName)}}" alt="{{picture.comment}}" onclick="myFunction(this);">
      </div>
    {% endfor %}

  </div>

  <!-- The expanding image container -->
  <div class="container" onclick="this.style.display='none'">
    <!-- Close the image -->
    <span onclick="this.parentElement.style.display='none'" class="closebtn">&times;</span>

    <!-- Expanded image -->
    <img id="expandedImg" style="width:100%">

    <!-- Image text -->
    <div id="imgtext"></div>
  </div>
</div>
{% endblock %}
