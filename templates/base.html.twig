<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>{% block title %}Club de Surcasting Turballais{% endblock %}</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
  <link href="{{ asset('assets/css/master.css') }}" rel="stylesheet"/>
  <link rel="icon" href="{{ asset('assets/pictures/logo_club.jpg') }}">

  {% block stylesheets %}{% endblock %}
</head>
<body>
  <div id="menu">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <a class="navbar-brand" href="{{path('home')}}">Accueil</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <a class="nav-link" href="#">La vie du club</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="{{ path('useful_link')}}">Les liens utiles</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">Contactez nous</a>
          </li>
          {% if is_granted('ROLE_MEMBER') %}
          <li class="nav-item">
            <a class="nav-link" href="{{ path('member_index')}}">Espace Membres</a>
          </li>
          {% endif %}
          {% if is_granted('ROLE_ADMIN') %}
          <li class="nav-item">
            <a class="nav-link" href="{{ path('admin_index') }}">Espace Admin</a>
          </li>
          {% endif %}
        </ul>
        <ul class="navbar-nav">
          {% if not app.user %}
          <li>
            <a class="nav-link" href="{{ path('app_register') }}"><i>Enregistrement</i></a>
          </li>
          <li class="nav-item connexion">
            <a class="nav-link" href="{{ path('app_login') }}"><i>Connexion</i></a>
          </li>
          {% else %}
          <li class="nav-item connexion">
            <a class="nav-link" href="{{ path('app_logout') }}">
              {{ app.user.username }} / DÃ©connexion
            </a>
          </li>
          {% endif %}
        </ul>
      </div>
    </nav>
  </div>
  {% block body %}{% endblock %}
  {% block javascripts %}{% endblock %}
</body>
<footer>
  <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
</footer>
</html>
