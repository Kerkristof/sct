{% extends 'base.html.twig' %}
{% block body %}
  <div class="restricted_container">
    <small><i><a href="{{path('event_category_create')}}">Ajouter une catégorie</a><i></small>
    <h3>Catégories d'évènements</h3>
    <hr>
    {% for event_category in event_categories %}
      <h5>{{ event_category.title}} <small><i><a href="{{ path('event_category_update', {'id' : event_category.id}) }}">Modifier</a></i></small> </h5>
      <p>{{ event_category.content}}</p>
      <hr>
    {% endfor %}
  </div>
  <div class="restricted_container">
    <small><i><a href="{{path('event_create')}}">Ajouter un évènement</a><i></small>
    <h3>Liste des évènements</h3>
    <hr>
    {% for event in events %}
        <h5>
          {% if event.date > date() %}
          <strong style="color : red">A VENIR </strong>
          {% endif %}
        {{ event.title}} Le {{ event.date | date('d/m/Y')}}
        <small><i><a href="{{ path('event_update', {'id' : event.id}) }}">Modifier</a></i></small>
        <small><i><a href="{{ path('add_event_file', {'id' : event.id}) }}">Ajouter un fichier</a></i></small>
        </h5>
        <p>{{ event.content}}</p>
        <hr>
    {% endfor %}
  </div>
{% endblock %}
