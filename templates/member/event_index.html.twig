{% extends 'base.html.twig' %}

{% block body %}
  <div class="restricted_container">
    <div class="card-container">

      {% for event in events %}
        <div class="card">
          <div class="card-header">
            <h4>
              {% if event.date > date() %}
              <i><small><span style="color:red">A VENIR</span></small>
              {% endif %}
              Le {{event.date | date('d/m/Y')}}</i>
            </h4>
            <h3>{{ event.title}}</h3>
          </div>
          <div class="card-main">
            <p>{{event.content}}</p>
          </div>
        </div>
      {% endfor %}
    </div>
    {{ knp_pagination_render(events) }}
  </div>
{% endblock %}
